{
  "app_name": "Unified Parser Configuration",
  "project_root": null,
  "config_file": null,
  "env_file": null,
  "root_directory": "/",
  "environment": "development",
  "log_level": "info",
  "chrome": {
    "headless": false,
    "chromedriver_path": "C:/Users/lexxd/Downloads/chromedriver_win32/chromedriver.exe",
    "silent_browser": true,
    "binary_path": null,
    "start_maximized": false,
    "disable_images": true,
    "memory_limit": 1024,
    "proxy_server": null
  },
  "parser": {
    "retries": 3,
    "timeout": 10.0,
    "skip_404_response": true,
    "delay_between_clicks": 0,
    "max_records": 1000,
    "use_gc": false,
    "gc_pages_interval": 10,
    "yandex_captcha_wait": 20,
    "yandex_reviews_scroll_step": 500,
    "yandex_reviews_scroll_max_iter": 100,
    "yandex_reviews_scroll_min_iter": 30,
    "yandex_card_selectors": [
      "div.search-business-snippet-view",
      "div.search-snippet-view__body._type_business",
      "div[class*='search-snippet-view__body'][class*='_type_business']",
      "a[href*='/maps/org/']:not([href*='/gallery/'])"
    ],
    "yandex_scroll_container": ".scroll__container, .scroll__content, .search-list-view__list",
    "yandex_scrollable_element_selector": ".scroll__container, .scroll__content, [class*='search-list-view'], [class*='scroll']",
    "yandex_scroll_step": 800,
    "yandex_scroll_max_iter": 200,
    "yandex_scroll_wait_time": 2.0,
    "yandex_min_cards_threshold": 500
  },
  "writer": {
    "encoding": "utf-8-sig",
    "verbose": true,
    "format": "csv",
    "csv": {
      "add_rubrics": true,
      "add_comments": true,
      "columns_per_entity": 3,
      "remove_empty_columns": true,
      "remove_duplicates": true,
      "join_char": "; ",
      "output_filename": "output.csv"
    },
    "output_dir": "./output"
  },
  "log": {
    "gui_format": "%(asctime)s.%(msecs)03d | %(message)s",
    "cli_format": "%(asctime)s.%(msecs)03d | %(levelname)-8s | %(message)s",
    "gui_datefmt": "%H:%M:%S",
    "cli_datefmt": "%d/%m/%Y %H:%M:%S",
    "level": "info"
  }
}